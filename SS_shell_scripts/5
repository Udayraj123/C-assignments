echo -n type the no of rows of pattern:
read rows
i=1
j=0
space=`expr $rows`
temp=`expr $space`
while test $temp -gt 0
do
	echo -n " "
	temp=`expr $temp - 1`
done
space=`expr $space - 1`
while test $i -lt `expr $rows + 1`
do
	temp=`expr $space`
	if test ! $i = 1
	then
		echo -n " "
	fi
	while test $j -lt `expr $i + 1`
	do	
		if test $j = 1
		then
			while test $temp -gt 0
			do
				echo -n " "
				temp=`expr $temp - 1`
			done
		fi
		echo  -n "$i "
		if test $i = 1
		then break
		fi
		j=`expr $j + 1`
		
	done
	space=`expr $space - 1`
	j=1
	echo  
	if test i = rows
	then
		break
	fi
	i=`expr $i + 1`
done
